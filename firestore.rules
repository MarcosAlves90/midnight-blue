rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura e escrita apenas para usuários autenticados em seus próprios documentos
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
        && (
          request.resource.data.keys().hasOnly(['displayName', 'email', 'avatar', 'updatedAt']) ||
          request.resource.data.keys().hasOnly(['avatar', 'updatedAt']) ||
          request.resource.data.keys().hasOnly(['displayName', 'updatedAt'])
        );
      allow delete: if false;
    }

    // Permitir leitura de dados públicos de personagens (se necessário)
    match /characters/{characterId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Bloquear tudo mais por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
