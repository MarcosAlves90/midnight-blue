rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura e escrita apenas para usuários autenticados em seus próprios documentos
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
        && (
          request.resource.data.keys().hasOnly(['displayName', 'email', 'avatar', 'updatedAt']) ||
          request.resource.data.keys().hasOnly(['avatar', 'updatedAt']) ||
          request.resource.data.keys().hasOnly(['displayName', 'updatedAt']) ||
          request.resource.data.keys().hasOnly(['lastSelectedCharacterId', 'updatedAt'])
        );
      allow delete: if false;

      // Subcoleção de personagens do usuário
      match /characters/{characterId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Bloquear tudo mais por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
